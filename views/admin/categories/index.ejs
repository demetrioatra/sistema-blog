<%- include('../../partials/head.ejs') %>
    <title>Category</title>
<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/sidebar.ejs') %>
    <main class="container-lg">
        <br>
        <div class="header-info">
            <h2>Categorias</h2>
            <a href="/admin/category/new" class="btn btn-success">New Category</a>
        </div>
        <br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <th><%- category.id %></th>
                        <th><%- category.title %></th>
                        <th><%- category.slug %></th>
                        <th>
                            <a class="btn btn-warning" href="/admin/category/edit/<%- category.id %>">Edit</a>
                            <form action="/category/delete" method="post" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                                <input type="hidden" name="id" value="<%- category.id %>">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </th>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
<%- include('../../partials/script.ejs') %>
<script>
    function confirmarDelecao(event, form) {

        var conf = confirm("Excluir Categoria?")

        if (conf) {
            form.submit()
            console.log("Categoria Deletada!")
        } else {
            event.preventDefault()
            console.log("Deleção cancelada...")
        }
    }
</script>