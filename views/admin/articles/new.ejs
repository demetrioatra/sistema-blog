<%- include('../../partials/head.ejs') %>
    <title>Categoria - Cadastro</title>
<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/sidebar.ejs') %>
    <br>
    <main class="container-lg">
        <h2>Cadastro de Artigos</h2>
        <br>
        <div class="card">
            <div class="card-header">
                <form action="/article/create" method="post" class="container">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="form-control" placeholder="">
                    <br>
                    <label for="description">Description</label>
                    <textarea class="form-control" id="mytextarea"></textarea>
                    <br>
                    <button class="btn btn-success">Salvar Artigo</button>
                </form>
            </div>
        </div>
    </main>
<%- include('../../partials/script.ejs') %>
<script src="/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
<script>
  tinymce.init({
    selector: 'textarea#mytextarea',
    license_key: 'gpl|<your-license-key>'
  })
</script>